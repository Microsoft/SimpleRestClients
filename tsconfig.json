{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "declaration": true,
        "noResolve": false,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "lib": ["dom", "es5", "es2015"]
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "dist",
        "node_modules"
    ]
}